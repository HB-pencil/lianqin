<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_add_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/activity_add_kaoqin"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="68dp"
            android:text=""
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/activity_add_gengxin"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="68dp"
            android:text=""
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/activity_add_zhuce"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="68dp"
            android:text=""
            android:background="@android:color/transparent"/>
        <com.example.shinelon.lianqin.customview.ActionView
            android:id="@+id/activity_add_cusview"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </FrameLayout>

</RelativeLayout>